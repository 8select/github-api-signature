{
  "name": "github-api-signature",
  "version": "0.0.1",
  "description": "Node.js signature generator for GitHub API using a PGP key",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/GitbookIO/github-api-signature.git"
  },
  "bugs": {
    "url": "https://github.com/GitbookIO/github-api-signature/issues"
  },
  "author": "jpreynat <johan.preynat@gmail.com>",
  "license": "Apache-2.0",
  "dependencies": {
    "openpgp": "^2.6.2",
    "pad": "^2.0.3"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "eslint": "^4.13.1",
    "eslint-config-gitbook": "^3.0.0",
    "eslint-plugin-flowtype": "^2.40.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^5.1.0",
    "eslint-plugin-prettier": "^2.4.0",
    "eslint-plugin-react": "^7.5.1",
    "flow-bin": "^0.61.0",
    "flow-typed": "^2.2.3",
    "prettier": "^1.9.2"
  },
  "scripts": {
    "build": "rm -rf lib/ && babel --ignore '**/tests/*.js' --out-dir lib src",
    "prepublish": "yarn run test && yarn run build",
    "test": "yarn run test:ava && yarn run test:lint && yarn run test:flow",
    "test:lint": "eslint src/",
    "test:flow": "flow",
    "test:ava": "ava --verbose"
  },
  "ava": {
    "files": [
      "**/tests/*.js"
    ],
    "failFast": true,
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "keywords": [
    "node",
    "github",
    "api",
    "pgp",
    "gpg"
  ]
}
